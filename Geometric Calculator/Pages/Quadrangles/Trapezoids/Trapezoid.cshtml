@page
@model Geometric_Calculator.Pages.Quadrangles.Trapezoids.TrapezoidModel
@{
    ViewData["Title"] = "Trapezoid";
}

<div class="text-center">
    <form method="post">
        <tr>
            <td>Small warp: </td>
            <td><input type="text" value="0" name="SmallWarp" /></td>
            <td>Big warp: </td>
            <td><input type="text" value="0" name="BigWarp" /></td>
        </tr>
        <br />
        <tr>
            <td>Side 'a': </td>
            <td><input type="text" value="0" name="SideA" /></td>
            <td>Side 'b': </td>
            <td><input type="text" value="0" name="SideB" /></td>
        </tr>
        <br />
        <tr>
            <td>Angle 'a': </td>
            <td><input type="text" value="0" name="AngleA" /></td>
            <td>Angle 'b': </td>
            <td><input type="text" value="0" name="AngleB" /></td>
            <td>Angle 'c': </td>
            <td><input type="text" value="0" name="AngleC" /></td>
            <td>Angle 'd': </td>
            <td><input type="text" value="0" name="AngleD" /></td>
        </tr>
        <br />
        <tr>
            <td>Diagonal 'a': </td>
            <td><input type="text" value="0" name="DiagonalA" /></td>
            <td>Diagonal 'a': </td>
            <td><input type="text" value="0" name="DiagonalB" /></td>
        </tr>
        <br />
        <tr>
            <td>Height 'a': </td>
            <td><input type="text" value="0" name="HeightA" /></td>
            <td>Height 'b': </td>
            <td><input type="text" value="0" name="HeightB" /></td>
            <td>Height 'c': </td>
            <td><input type="text" value="0" name="HeightC" /></td>
            <td>Height 'd': </td>
            <td><input type="text" value="0" name="HeightD" /></td>
        </tr>
        <br />
        <input type="submit" value="Get area" />
    </form>
    <br />
    <p>@Model.Message</p>
</div>