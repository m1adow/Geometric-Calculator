@page
@model Geometric_Calculator.Pages.Quadrangles.ParallelogramModel
@{
    ViewData["Title"] = "Parallelogram";
}

<div class="text-center">
    <form method="post">
        <tr>
            <td>Side "a": </td>
            <td><input type="text" value="0" name="SideA" /></td>
            <td>Height "a": </td>
            <td><input type="text" value="0" name="HeightA" /></td>
            <td>Angle "a": </td>
            <td><input type="text" value="0" name="AngleA" /></td>
        </tr>
        <br />
        <tr>
            <td>Side "b": </td>
            <td><input type="text" value="0" name="SideB" /></td>
            <td>Height "b": </td>
            <td><input type="text" value="0" name="HeightB" /></td>
            <td>Angle "b": </td>
            <td><input type="text" value="0" name="AngleB" /></td>
        </tr>
        <br />
        <tr>
            <td>Diagonal "a": </td>
            <td><input type="text" value="0" name="DiagonalA"></td>
            <td>Diagonal "b": </td>
            <td><input type="text" value="0" name="DiagonalB"></td>
            <td>Angle between diagonals: </td>
            <td><input type="text" value="0" name="AngleBetweenDiagonals"></td>
        </tr>
        <br />
        <input type="submit" value="Get area" />
    </form>
    <br />
    <p>@Model.Message</p>
</div>